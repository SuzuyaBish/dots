layout {
  default_tab_template {
    children
    pane size=1 borderless=true {
        plugin location="zellij:compact-bar"
    }
  }
  tab {
    pane split_direction="vertical" {
        pane size="60%" {
          command "nvim" close_on_exit=true
        }
        pane split_direction="horizontal" size="40%" {
          pane size="60%" {
            command "claude"
          }
          pane size="40%"
        }
    }
  }
}
